<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Document</title>
</head>
<body>
  
<div id='homepage'>
  <div id='nav-bar'>
    <h1>My Reptiles</h1>
    <a href="/reptiles/new">Add Reptile</a>
    <a href="/logout">Log Out</a>
  </div>
  <div id='information'>
    <div id='content'>
      <% reptiles.forEach(r => { %>
        <div id="main">
          
          <div id='label'>
            <p class='type'>Species</p>
            <p class='attributes'><%= r.species %> </p>
          </div>
          <div id='label'>
            <p class='type'>Morph</p>
            <p class='attributes'><%= r.morph %> </p>
          </div>
          <div id='label'>
            <p class='type'>Sex</p>
            <p class='attributes'><%= r.sex %> </p>
          </div>
          <div id='label'>
            <p class='type'>Age</p>
            <p class='attributes'><%= r.age %> </p>
          </div>
          <div id='label'>
            <p class='type'>Lay Date</p>
            <p class='attributes'><%= r.layDate %> </p>
          </div>
          <div id='label'>
            <p class='type'>Hatch Date</p>
            <p class='attributes'><%= r.hatchDate %> </p>
          </div>
          <div id='card-nav'>
              <a type="submit" href='/reptiles/<%=r._id%>/edit'>Edit</a>
            <form action="/reptiles/<%=r.id%>?_method=DELETE" class="nav-button" method="POST">
              <button type="submit">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
      </div>
  </div>
 </div> 
     
  
</body>
</html>